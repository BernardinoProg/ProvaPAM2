<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Usuarios.LocalizacaoView"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             Title="LocalizacaoView">


    <Grid RowDefinitions="Auto,*,*">
        <HorizontalStackLayout
            Grid.Row="0" Padding="10">
            <Entry Placeholder="DigiteCep" Text="{Binding cep}"/>
            <Button Command="{Binding ObterEnderecoCommand}"/>
        </HorizontalStackLayout>
        
    <maps:Map x:Name="mapa" ItemsSource="{Binding MeuMapa}"
              MapType="Hybrid" IsShowingUser="True"
              IsZoomEnabled="True" IsTrafficEnabled="True"
              Grid.Row="1"
              Grid.RowSpan="2">
        <maps:Map.ItemTemplate>
            <DataTemplate>
                <maps:Pin Location="{Binding Location}"
                          Address="{Binding Adress}"
                          Label="{Binding Label}"/>
            </DataTemplate>
        </maps:Map.ItemTemplate>
    </maps:Map>
    </Grid>
</ContentPage>